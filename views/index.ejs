<!DOCTYPE html>
<html>
  <head>
    <title> <%= title %></title>
    <link rel="stylesheet" href="/components/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="/components/toastr/toastr.css" />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body ng-app="rectanglesApp">
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <div class="container" ng-controller="CanvasController">
        <button ng-click="save()" class="btn btn-danger" stop-event>Save</button>
        <!-- Start toolbar -->
        <div class="row">
            <div class="col-md-10" id="tools" ng-controller="ToolbarController">
                <h3>Add Rectangle To Canvas</h3>
                <form role="form" class="form-inline">
                    <div class="form-group">
                        <label for="inputWidth">Width</label>
                        <input ng-model="newRectangle.width" type="text" class="form-control" id="inputWidth" placeholder="Width in px" stop-event>
                    </div>
                    <div class="form-group">
                        <label for="inputHeight">Height</label>
                        <input ng-model="newRectangle.height" type="text" class="form-control" id="inputHeight" placeholder="Height in px" stop-event>
                    </div>
                    <div class="form-group">
                        <label for="inputColor">Color</label>
                        <input ng-model="newRectangle.color" type="text" class="form-control" id="inputColor" placeholder="RGB Color" stop-event>
                    </div>
                    <button ng-click="addRectangle()" class="btn btn-default" stop-event>Add</button>
                </form>
            </div>
        </div>
        <!-- End toolbar -->
        <div class="row">
            <rectangle-canvas model="canvas">
                <rectangle ng-repeat="rectangle in canvas.rectangles" model="rectangle" />
            </rectangle-canvas>
        </div>
    </div>

    <!-- libs -->
    <script src="/components/jquery/dist/jquery.js" type="text/javascript" ></script>
    <script src="/components/jquery-ui/jquery-ui.js" type="text/javascript"></script>
    <script src="/components/jquery-ui/ui/draggable.js" type="text/javascript"></script>
    <script src="/components/bootstrap/dist/js/bootstrap.js" type="text/javascript" ></script>
    <script src="/components/lodash/dist/lodash.js" type="text/javascript" ></script>
    <script src="/components/node-uuid/uuid.js"></script>
    <script src="/components/toastr/toastr.js"></script>
    <script src="/components/angular/angular.js" type="text/javascript" ></script>
    <script src="/components/angular-local-storage/angular-local-storage.js"></script>
    <script src="/javascripts/models.js" type="text/javascript"></script>
    <script src="/javascripts/app.js" type="text/javascript"></script>


  </body>
</html>